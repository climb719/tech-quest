<h1> Edit any of the information for: </h1>
<h3> <%= @interview_question.question %> </h3> 
<br> 
<br>
<%= render partial: "layouts/errors", locals: {object: @interview_question} %>

<%= form_for(@interview_question) do |f| %>
 
    <%= f.label :question %>:
    <%= f.text_area :question  %>
    <br>
    <br>
    <%= f.label :answer %>:
    <%= f.text_area :answer %>
    <br>
    <br>
  
    <%= f.label "Choose a category for this question:" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
    
    <p> Or create a new category:
        <%= f.fields_for :category do |c| %>
        <%= c.text_field :name %>
        <% end %>
    </p>

    <br></br>
    <%= f.submit "Update Your Interview Question" %>

    <% end %>