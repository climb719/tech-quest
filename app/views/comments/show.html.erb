<h3> <%=@comment.user.name %> said: </h3>
<%= @comment.content %>
<br>
<br>
<h6> <%= @comment.display_date %>

<% if @comment.user == current_user%>
<h4>  <%= link_to "Edit Comment", edit_comment_path(@comment) %> </h4>
<%= link_to "Delete", comment_path(@comment), :method => :delete, data: {confirm: "Are you sure you want to delete this comment?"}  %>


<% end %>