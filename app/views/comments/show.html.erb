<h3> <%=@comment.user.name %> said: </h3>
<%= @comment.content %>
<h6> <%= @comment.created_at.strftime("%B %d, %Y") %>

<% if @comment.user == current_user%>
<h4>  <%= link_to "Edit Comment", edit_comment_path(@comment) %> </h4>
<%= link_to "Delete", comment_path(@comment), flash[:message] => "Are you sure?", :method => :delete %>
